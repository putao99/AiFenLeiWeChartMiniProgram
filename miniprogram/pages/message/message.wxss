/* miniprogram/pages/message/message.wxss */
page {
  background-color: #eee;
}
.swiper-content{
  background-color: #eee;
}


.item-wrap{
  margin: 10px 20px 0 20px;
  background-color: #eee;
}
.item-wrap:last-child{
  margin-bottom: 20px;
}

.item-time{
  font-size: 12px;
  text-align: center;
  padding: 5px 0;
  color: rgba(0,0,0,.5);
}

.item-main{
  position: relative;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 1px 0 3px 0 rgba(39, 54, 78, 0.12);
  padding: 15px 15px 10px 15px;
}
.item-detail{
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 13px;
  margin-top: 10px;
  padding-top: 10px;
  color: #666;
}
.item-detail::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid rgba(0,0,0,.1);
  color: rgba(0,0,0,.1);
}
.weui-cell__ft_in-access::after{
  border-width: 1px 1px 0 0 !important;
}

.item-title,.item-desc{
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  
}
.item-title{
  position: relative;
  font-weight: 700;
  font-size: 16px;
  color: rgba(0,0,0,.9);
  width: auto;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.item-title .unread{
  display: inline-block;
  background-color: #fa5151;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  vertical-align: middle;
}

.item-desc{
  color: rgba(0,0,0,.5);
  font-size: 13px;
  padding-top: 4px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.item-imglist{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.item-imglist .img-thumb{
  margin: 5px 5px 0 0;
  border-radius: 3px;
}

.no-data{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: rgba(0,0,0,.5);

  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}