.gotoWallet{
  display:inline-block;
  padding:8rpx 20rpx;
  color:#a09e9e;
  border:1px solid currentColor;
  border-radius:40rpx;
  font-size:12px;
}
.nogotoWallet{
  display:none;
}
.ugc{
  height: 176rpx;
}
.ugc image{
  height: 100%;
  width: 100%;
}
.dzgroup_item{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}
.yqicon{
  width: 96rpx;
  height: 96rpx;
  margin-right: 32rpx;
}
.dzgroup_item .iterm_num{
  text-align: left;
  font-size: 24px;
}
.ft_in-access{
  position: relative;
}
.ft_in-access::after{
  content: " ";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-width: 2px 2px 0 0;
  border-color: #7F7F7F;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
  position: relative;
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -5px;
  right: 0;
}


